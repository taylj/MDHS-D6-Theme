$(document).ready(function() {
  $("#edit-search-theme-form-header").val('');
  $("#search_header").val("search");
  
  // image caption alignment for profiles node type
  var field_profile_images = $(".field-profile-image");
  $.each(field_profile_images, function() {
    var field_profile_img = $(this);
    var field_img = $(field_profile_img).find("img")[0];
    var img_caption = $(field_profile_img).siblings(".custom-image-caption")[0];
    var img_caption_inner = $(img_caption).find(".custom-image-caption-inner")[0];

    $(img_caption).width($(field_img).width());
    $(img_caption_inner).css("margin-top", "-" + $(img_caption_inner).height() + "px");
  });
  
  // image caption alignment for about mdhs node type
  var field_about_images = $(".pane-field-about-mdhs-image");
